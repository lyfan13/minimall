/* pages/product/detail.wxss */
.swiper{
  height: 750rpx;
}
.swiper-image{
  width:100%;
  height: 750rpx;
}
.title{
  margin-top: 20rpx;
  background-color: white;
  height: 150rpx;
  padding: 24rpx 18rpx;
  position: relative;
}
.now{
  color:#fc4353;
  font-weight: bold;
  font-size: 38rpx;
}
.del{
  color:#999999;
  font-size: 28rpx;
  margin-left: 10rpx;
  text-decoration:line-through
}
.product-name{
  padding-left: 10rpx;
  margin-top: 20rpx;
}
.share{
  position: absolute;
  right:0;
  top:60rpx;
  color: #666666;
  background-color: #f5f5f5;
  font-size: 24rpx;
  padding: 10rpx;
  border-radius: 100rpx 0 0 100rpx;
  display: flex;
  align-items: center;
}
.share-icon{
  width:30rpx;
  height: 30rpx;
  margin-right: 4rpx;
}
.tip{
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 24rpx;
  background-color: white;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
}
.tip-left{
  color:#999999;
}
.tip-right{
  color:#fc4353;
}
.content{
  background-color: white;
  margin-top: 20rpx;
  padding: 24rpx;
}
.intro{
  color:#999999;
  height: 400rpx;
  line-height: 400rpx;
  text-align: center;
}
.bottom-bar{
  position: fixed;
  height: 100rpx;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  display: flex;
  align-items: center;
}
.icon{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
}
.bottom-img{
  width: 44rpx;
  height: 44rpx;
}
.icon-text{
  color:#999999;
  font-size: 20rpx;
}
.button-box{
  flex:1;
  display: flex;
}
.cart{
  flex:1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color:white;
  background-color: #333;
}
.buy{
  flex:1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color:white;
  background-color: #18cc8a;
}